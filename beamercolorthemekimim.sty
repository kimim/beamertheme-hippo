\ProvidesPackage{beamercolorthemekimim}[v2.0.0]
\RequirePackage{ifthen}
\mode<presentation>

\newboolean{darkmode}
\setboolean{darkmode}{false}

\DeclareOptionBeamer{darkmode}{\setboolean{darkmode}{true}}
\ProcessOptionsBeamer

\definecolor{kimim@text@black}{RGB}{0,0,0}
\definecolor{kimim@text@gray}{RGB}{113,113,113}
\definecolor{kimim@text@whitergray}{RGB}{160,160,160}
\definecolor{kimim@text@red}{RGB}{255,0,15}
\definecolor{kimim@text@white}{RGB}{255,255,255}
\definecolor{kimim@text@blockbg}{HTML}{f5f5f5}
\definecolor{kimim@text@kimimblue}{HTML}{5577ff}
\definecolor{kimim@text@blue}{HTML}{4169e1}
\definecolor{kimim@text@navy}{HTML}{000080}

\ifthenelse{\boolean{darkmode}}{
  \newcommand{\beamertextcolor}{kimim@text@white}%
  \newcommand{\beamerbgcolor}{kimim@text@black}%
  \newcommand{\beamerblockbgcolor}{kimim@text@blockbg}
  \newcommand{\beamerfootertextcolor}{kimim@text@whitergray}%
  \newcommand{\beamerheadlinecolor}{kimim@text@black}
  \newcommand{\beamersubtitlecolor}{kimim@text@navy}
  \newcommand{\beameralertcolor}{kimim@text@red}
  \newcommand{\beamerlinkcolor}{kimim@text@blue}
  \newcommand{\beamerlogocolor}{kimim@text@kimimblue}
}{%
  \newcommand{\beamertextcolor}{kimim@text@black}%
  \newcommand{\beamerbgcolor}{kimim@text@white}%
  \newcommand{\beamerblockbgcolor}{kimim@text@blockbg}
  \newcommand{\beamerfootertextcolor}{kimim@text@gray}%
  \newcommand{\beamerheadlinecolor}{kimim@text@black}
  \newcommand{\beamersubtitlecolor}{kimim@text@navy}
  \newcommand{\beameralertcolor}{kimim@text@red}
  \newcommand{\beamerlinkcolor}{kimim@text@blue}
  \newcommand{\beamerlogocolor}{kimim@text@kimimblue}
}

\setbeamercolor*{normal text}{fg=\beamertextcolor}
\setbeamercolor*{alerted text}{fg=\beameralertcolor}
\setbeamercolor*{footline}{fg=\beamerfootertextcolor}
\setbeamercolor*{headline}{fg=\beamerheadlinecolor}
\setbeamercolor*{frametitle}{fg=\beamerheadlinecolor}
\setbeamercolor*{subframetitle}{fg=\beamersubtitlecolor}

\setbeamercolor*{author}{fg=\beamerfootertextcolor}
\setbeamercolor*{date}{parent=author}
\setbeamercolor*{title}{parent=frametitle}
\setbeamercolor*{section title}{parent=frametitle}

\setbeamercolor*{section in toc}{parent=normal text}
\setbeamercolor*{subsection in toc}{parent=normal text}
\setbeamercolor*{subsubsection in toc}{parent=normal text}

\setbeamercolor{block title}{fg=\beamerheadlinecolor,bg=\beamerbgcolor}
\setbeamercolor{block body}{fg=\beamertextcolor,bg=\beamerblockbgcolor}
\setbeamercolor{block title alerted}{fg=\beamerheadlinecolor,bg=\beamerbgcolor}
\setbeamercolor{block body alerted}{fg=\beamertextcolor,bg=\beamerblockbgcolor}
\setbeamercolor{block title example}{fg=\beamerheadlinecolor,bg=\beamerbgcolor}
\setbeamercolor{block body example}{fg=\beamertextcolor,bg=\beamerblockbgcolor}

\setbeamercolor{quotation}{fg=\beamertextcolor,bg=\beamerblockbgcolor}

\setbeamercolor*{enumerate item}{parent=normal text}
\setbeamercolor*{enumerate subitem}{parent=normal text}
\setbeamercolor*{enumerate subsubitem}{parent=normal text}

\setbeamercolor*{itemize item}{parent=normal text}
\setbeamercolor*{itemize subitem}{parent=normal text}
\setbeamercolor*{itemize subsubitem}{parent=normal text}

\setbeamercolor*{bibliography item}{parent=normal text}
\setbeamercolor*{bibliography entry title}{parent=normal text}
\setbeamercolor*{bibliography entry author}{parent=normal text}
\setbeamercolor*{bibliography entry location}{parent=normal text}
\setbeamercolor*{bibliography entry note}{parent=normal text}

\setbeamercolor*{caption name}{parent=normal text}
\setbeamercolor{background canvas}{bg=}

\mode<all>
