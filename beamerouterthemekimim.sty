\defbeamertemplate*{frametitle}{kimimtitle}{
  \vskip 4pt
  \begin{beamercolorbox}[sep=0ex, wd=.95\paperwidth, left]{frametitle}
    \vskip 0.5pt
    \usebeamerfont{frametitle}%
    \ifbeamer@inappendix%
        Appendix
    \else%
        \ifbeamer@noframenumbering%
            Outline
        \else
            \ifx\insertsection\@empty% if section title is empty
                \ifx\insertframetitle\@empty% if frametitle is empty
                    Outline
                \else%
                    \insertframetitle% if frametitle is not empty
                \fi%
            \else%
                \insertsection% if section title is not empty
            \fi%
        \fi%
    \fi%
  \end{beamercolorbox}%
  \begin{beamercolorbox}[sep=0ex, wd=.95\paperwidth, left]{subframetitle}
    \ifbeamer@noframenumbering% Overview index page
    \else%
        \ifx\insertsection\@empty% Outline page
            \ifx\insertframesubtitle\@empty%
            \else% If there are any frame subtitle
                \usebeamerfont{framesubtitle}\insertframesubtitle%
            \fi%
        \else
            \usebeamerfont{framesubtitle}\insertframetitle%
        \fi%
    \fi%
  \end{beamercolorbox}%
}%


\newcommand{\basicfooter}[2]{%
  \leavevmode
  \begin{beamercolorbox}[sep=0pt, wd=\myfootbarmargin, ht=#1, dp=1ex]{footline}
  \end{beamercolorbox}%
  \begin{beamercolorbox}[sep=0pt, wd=\myfootbarlength, ht=#1, dp=1ex]{footline}
    \hbox {
      \ifbeamer@inappendix%
      \vbox{\hsize \linewidth
        { \usebeamercolor[\beamerheadlinecolor]{normal text}\ \hrule }}%
      \else%
      %% the \setlength's should be put under else,
      %% because \insertmainframenumber is 0 in appendix
      \setlength{\myprogress@slot}{%
        \ifx\insertmainframenumber\@empty
          0\linewidth
        \else
          \ifnum \insertmainframenumber = 0
          0\linewidth
          \else
          \linewidth * \ratio{1 pt}{\insertmainframenumber pt}%
          \fi
        \fi
      }%
      \setlength{\myprogress@current}{%
        \myprogress@slot * \insertframenumber
      }%
      \setlength{\myprogress@completed}{%
        \myprogress@current - \myprogress@slot
      }%
      \setlength{\myprogress@remaining}{%
        \linewidth - \myprogress@current
      }%
      \vbox{\hsize \myprogress@completed
        { \usebeamercolor[\beamerfootertextcolor]{normal text}\ \hrule }}%
      \vbox{\hsize \myprogress@slot
        { \usebeamercolor[\beamerlogocolor]{normal text}\ \hrule }}%
      \vbox{\hsize \myprogress@remaining
        { \usebeamercolor[\beamerfootertextcolor]{normal text}\ \hrule }}%
      \fi%
    }
    \leavevmode%
    #2%
  \end{beamercolorbox}%
  \begin{beamercolorbox}[sep=0pt, wd=\myfootbarmargin, dp=1ex, ht=#1]{footline}
  \end{beamercolorbox}%
}


\defbeamertemplate*{footline}{kimimfooterdefault}{%
  \basicfooter{%
    \myfooterheight
  }{%
    \begin{beamercolorbox}[sep=0mm, wd=.725\myfootbarlength, ht=\myfooterheight]{footline}%
      \usebeamerfont{footline}%
      \vbox to\myfooterheight{%
        \vfil%
        %% \insertshorttitle{}
        \today $\quad$ $~|~$ %
        %% \insertshortauthor{} $\quad$%
        %% \insertshortsubtitle{}%
        \ifthenelse{\boolean{nofooterlogo}}{}{
          \showpagenum
        }\par%
        \vfil%
        \vfil%
      }
    \end{beamercolorbox}%
    \begin{beamercolorbox}[sep=0mm, wd=.275\myfootbarlength,right, ht=\myfooterheight]{footline}
      \vbox to\myfooterheight{%
        \vskip 3pt%
        \drawlogo{0.1}%
        \vfil%
      }%
    \end{beamercolorbox}%
  }
}

\defbeamertemplate{footline}{kimimfooternologo}{%
  \basicfooter{%
    \myfooterheight
  }{%
      \vbox to\myfooterheight{%
      \vfil%
      \insertshorttitle{} $~|~$ %
      \insertshortauthor{} $\quad$%
      \insertshortsubtitle{}%
      \hfill \showpagenum%
      \par\vfil\vfil
    }
  }
}

