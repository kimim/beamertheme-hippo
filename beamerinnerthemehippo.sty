\AtBeginSection[]{%
  \frame[noframenumbering]{
    \frametitle{\inserttitle~-~\contentsname}%
    \begin{minipage}{\textwidth}
      \tableofcontents[currentsection]%
    \end{minipage}
  }%
}%

\mode<all>
